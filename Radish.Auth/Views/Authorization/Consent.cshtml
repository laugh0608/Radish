@model Radish.Auth.Models.ConsentViewModel
@using System.Globalization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Radish.Auth.Resources.Errors> Localizer
@{
    ViewData["Title"] = Localizer["auth.consent.title"];
}
<!DOCTYPE html>
<html lang="@(CultureInfo.CurrentUICulture.Name)">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f5f5f5;
        }
        .container {
            background: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        h1 {
            color: #333;
            margin-bottom: 15px;
        }
        .description {
            color: #666;
            margin-bottom: 20px;
        }
        .client-info {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 20px;
        }
        .client-info strong {
            color: #333;
        }
        .scopes-section {
            margin-bottom: 25px;
        }
        .scopes-section p {
            font-weight: 500;
            color: #333;
            margin-bottom: 10px;
        }
        .scopes-section ul {
            list-style: none;
            padding: 0;
        }
        .scopes-section li {
            padding: 8px 12px;
            margin: 5px 0;
            background: #e7f2ff;
            border-left: 3px solid #4285f4;
            border-radius: 3px;
            color: #333;
        }
        .button-group {
            display: flex;
            gap: 10px;
        }
        button {
            flex: 1;
            padding: 12px;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        button[value="accept"] {
            background: #34a853;
            color: white;
        }
        button[value="accept"]:hover {
            background: #2d9149;
        }
        button[value="deny"] {
            background: #ea4335;
            color: white;
        }
        button[value="deny"]:hover {
            background: #d33426;
        }
        .lang-switcher {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-bottom: 20px;
        }
        .lang-button {
            padding: 6px 12px;
            background: transparent;
            color: #4285f4;
            border: 1px solid #4285f4;
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px;
            transition: all 0.2s;
        }
        .lang-button:hover {
            background: #4285f4;
            color: white;
        }
        .lang-button.active {
            background: #4285f4;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="lang-switcher">
            <button type="button" class="lang-button @(CultureInfo.CurrentUICulture.Name.StartsWith("zh") ? "active" : "")" onclick="switchLanguage('zh-CN')">中文</button>
            <button type="button" class="lang-button @(CultureInfo.CurrentUICulture.Name.StartsWith("en") ? "active" : "")" onclick="switchLanguage('en-US')">English</button>
        </div>

        <h1>@Localizer["auth.consent.heading"]</h1>
        <p class="description">@string.Format(Localizer["auth.consent.description"], Model.ClientName)</p>

        <div class="client-info">
            <strong>@Localizer["auth.consent.client"]</strong> @Model.ClientName
        </div>

        <div class="scopes-section">
            <p>@Localizer["auth.consent.scopes"]</p>
            <ul>
                @foreach (var scope in Model.Scopes)
                {
                    <li>@scope</li>
                }
            </ul>
        </div>

        <form method="post">
            @* 通过隐藏字段将 OIDC 必要参数一并提交，避免二次 POST 时缺少 client_id 等参数 *@
            <input type="hidden" name="client_id" value="@Model.ClientId" />
            <input type="hidden" name="redirect_uri" value="@Model.RedirectUri" />
            <input type="hidden" name="response_type" value="@Model.ResponseType" />
            <input type="hidden" name="scope" value="@Model.Scope" />
            <input type="hidden" name="state" value="@Model.State" />

            <div class="button-group">
                <button type="submit" name="decision" value="accept">@Localizer["auth.consent.allow"]</button>
                <button type="submit" name="decision" value="deny">@Localizer["auth.consent.deny"]</button>
            </div>
        </form>
    </div>

    <script>
        function switchLanguage(culture) {
            const url = new URL(window.location.href);
            url.searchParams.set('culture', culture);
            url.searchParams.set('ui-culture', culture);
            window.location.href = url.toString();
        }
    </script>
</body>
</html>
