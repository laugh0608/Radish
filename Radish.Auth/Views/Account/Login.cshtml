@using System.Globalization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Radish.Auth.Resources.Errors> Localizer

@{
    ViewData["Title"] = Localizer["auth.login.title"];

    var returnUrl = Context.Request.Query["returnUrl"].ToString();
    var userName = Context.Request.Query["username"].ToString();
    var error = ViewContext.TempData["LoginError"] as string;
}

<!DOCTYPE html>
<html lang="@(CultureInfo.CurrentUICulture.Name)">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f5f5f5;
        }
        .container {
            background: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        h1 {
            color: #333;
            margin-bottom: 10px;
        }
        .description {
            color: #666;
            margin-bottom: 20px;
        }
        .test-account {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 20px;
        }
        .test-account h3 {
            margin: 0 0 10px 0;
            color: #555;
            font-size: 14px;
        }
        .test-account ul {
            margin: 0;
            padding-left: 20px;
        }
        .test-account li {
            margin: 5px 0;
            color: #666;
        }
        .test-account code {
            background: #e9ecef;
            padding: 2px 6px;
            border-radius: 3px;
            font-family: 'Courier New', monospace;
        }
        .error {
            color: #b3261e;
            background: #fdecea;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            color: #333;
            font-weight: 500;
        }
        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
            font-size: 14px;
        }
        input[type="text"]:focus,
        input[type="password"]:focus {
            outline: none;
            border-color: #4285f4;
        }
        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        button {
            flex: 1;
            padding: 12px;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        button[type="submit"] {
            background: #4285f4;
            color: white;
        }
        button[type="submit"]:hover {
            background: #357ae8;
        }
        .lang-switcher {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-bottom: 20px;
        }
        .lang-button {
            padding: 6px 12px;
            background: transparent;
            color: #4285f4;
            border: 1px solid #4285f4;
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px;
            transition: all 0.2s;
        }
        .lang-button:hover {
            background: #4285f4;
            color: white;
        }
        .lang-button.active {
            background: #4285f4;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="lang-switcher">
            <button type="button" class="lang-button @(CultureInfo.CurrentUICulture.Name.StartsWith("zh") ? "active" : "")" onclick="switchLanguage('zh-CN')">中文</button>
            <button type="button" class="lang-button @(CultureInfo.CurrentUICulture.Name.StartsWith("en") ? "active" : "")" onclick="switchLanguage('en-US')">English</button>
        </div>

        <h1>@Localizer["auth.login.heading"]</h1>
        <p class="description">@Localizer["auth.login.description"]</p>

        <div class="test-account">
            <h3>@Localizer["auth.login.testAccount"]</h3>
            <ul>
                <li>@Localizer["auth.login.testAccount.username"]<code>test</code></li>
                <li>@Localizer["auth.login.testAccount.password"]<code>P@ssw0rd!</code></li>
            </ul>
        </div>

        @if (!string.IsNullOrEmpty(error))
        {
            <div class="error">@error</div>
        }

        <form asp-controller="Account" asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@returnUrl" />

            <div class="form-group">
                <label>@Localizer["auth.login.usernameLabel"]</label>
                <input type="text" name="username" value="@(string.IsNullOrWhiteSpace(userName) ? "test" : userName)" />
            </div>

            <div class="form-group">
                <label>@Localizer["auth.login.passwordLabel"]</label>
                <input type="password" name="password" value="P@ssw0rd!" />
            </div>

            <div class="button-group">
                <button type="submit">@Localizer["auth.login.submit"]</button>
            </div>
        </form>
    </div>

    <script>
        function switchLanguage(culture) {
            const url = new URL(window.location.href);
            url.searchParams.set('culture', culture);
            url.searchParams.set('ui-culture', culture);
            window.location.href = url.toString();
        }
    </script>
</body>
</html>
