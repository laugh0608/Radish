            font-size: 0.95rem;
            color: rgba(255,255,255,0.85);
        }

        .client-id strong,
        .client-desc strong,
        .client-developer strong {
            display: block;
            font-size: 0.8rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            color: rgba(255,255,255,0.7);
        }

        .form-panel {
            padding: 48px;
            background: #fff;
            display: flex;
            flex-direction: column;
        }

        .lang-switcher {
