            padding: 48px;
            color: #f0fdf4;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
        }

        .client-panel::after {
            content: '';
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 20% 20%, rgba(255,255,255,0.2), transparent 45%);
            pointer-events: none;
        }

        .client-logo {
            width: 72px;
            height: 72px;
            border-radius: 20px;
            background: rgba(255,255,255,0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 24px;
            box-shadow: inset 0 0 0 1px rgba(255,255,255,0.25);
        }

        .client-logo img {
            width: 64px;
            height: 64px;
            border-radius: 16px;
            object-fit: cover;
        }

        .client-logo-placeholder {
            font-size: 28px;
            font-weight: 600;
            color: rgba(255,255,255,0.9);
        }

        .client-title {
            text-transform: uppercase;
            letter-spacing: 0.15em;
            font-size: 0.85rem;
            color: rgba(255,255,255,0.8);
            margin-bottom: 12px;
        }

        .client-name {
