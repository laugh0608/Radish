        }

        .login-link a:hover {
            color: #059669;
            text-decoration: underline;
        }

        .reward-badge {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            border: 1px solid #fcd34d;
            padding: 12px 16px;
            border-radius: 12px;
            margin-bottom: 20px;
            display: flex;
