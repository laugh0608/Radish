@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Http.Extensions
@using Radish.Localization
@using Radish.Pages
@using Volo.Abp.Account.Localization
@using Volo.Abp.Users
@using Volo.Abp.AspNetCore.Mvc.UI.Theming
@using Volo.Abp.Ui.Branding
@model IndexModel
@inject IHtmlLocalizer<RadishResource> L
@inject IHtmlLocalizer<AccountResource> AccountLocalizer
@inject ICurrentUser CurrentUser
@inject IBrandingProvider BrandingProvider
@inject ITheme Theme
@{
    Layout = Theme.GetEmptyLayout();
}

<div class="radish-landing d-flex flex-column" style="min-height: 100vh;">
    <!-- Hero -->
    <section class="radish-hero py-5 py-lg-6">
        <span class="radish-hero-anim" aria-hidden="true"></span>
        <div class="container">
            <div class="d-flex align-items-center justify-content-between gap-3 flex-wrap">
                <div class="radish-brand d-flex align-items-center gap-3">
                    @if (!BrandingProvider.LogoUrl.IsNullOrEmpty())
                    {
                        <span class="brand-logo"></span>
                    }
                    <div>
                        <h1 class="display-6 mb-1 fw-semibold">@BrandingProvider.AppName</h1>
                        <p class="lead mb-0 text-hero-sub">
                            @if (CurrentUser.IsAuthenticated)
                            {
                                <text>欢迎，@(CurrentUser.UserName ?? CurrentUser.Name ?? "")</text>
                            }
                            else
                            {
                                @L["Welcome"]
                            }
                        </p>
                    </div>
                </div>

                <div class="radish-actions d-flex align-items-center gap-2 ms-auto flex-wrap">
                    <!-- 大屏：直接展示所有操作 -->
                    <div class="d-none d-sm-flex align-items-center gap-2">
                        <button type="button" id="themeToggle" class="btn btn-light-subtle border-0 btn-sm" title="切换主题">🌞/🌙</button>
                        <div class="dropdown">
                            <button class="btn btn-light-subtle border-0 btn-sm dropdown-toggle" type="button" id="densityMenuBtn" data-bs-toggle="dropdown" aria-expanded="false">密度</button>
                            <ul class="dropdown-menu" aria-labelledby="densityMenuBtn">
                                <li><button class="dropdown-item density-item" data-density="auto" type="button">自动</button></li>
                                <li><button class="dropdown-item density-item" data-density="comfortable" type="button">舒适</button></li>
                                <li><button class="dropdown-item density-item" data-density="compact" type="button">紧凑</button></li>
                            </ul>
                        </div>
                        <abp-dropdown>
                            @if (Model.CurrentLanguage != null)
                            {
                                <abp-dropdown-button class="btn btn-light-subtle border-0 btn-sm" text="@Model.CurrentLanguage"/>
                            }

                            @if (Model.Languages != null)
                            {
                                <abp-dropdown-menu>
                                    @foreach (var language in Model.Languages)
                                    {
                                        var languageUrl = Url.Content($"~/Abp/Languages/Switch?culture={language.CultureName}&uiCulture={language.UiCultureName}&returnUrl={System.Net.WebUtility.UrlEncode(Request.GetEncodedPathAndQuery())}");
                                        <abp-dropdown-item href="@languageUrl">@language.DisplayName</abp-dropdown-item>
                                    }
                                </abp-dropdown-menu>
                            }
                        </abp-dropdown>

                        @if (CurrentUser.IsAuthenticated)
                        {
                            <a abp-button="Outline_Light" class="ms-1 btn-sm" asp-controller="Manage" asp-action="Index" asp-area="Account">@AccountLocalizer["MyAccount"]</a>
                            <a abp-button="Light" class="btn-sm" asp-controller="Logout" asp-action="Index" asp-area="Account">@L["Logout"]</a>
                        }
                        else
                        {
                            <a abp-button="Light" class="btn-sm" asp-controller="Login" asp-action="Index" asp-area="Account">@L["Login"]</a>
                        }
                        <button type="button" id="editToggle" class="btn btn-outline-secondary btn-sm ms-1" title="编辑首页">编辑</button>
                        <button type="button" id="hiddenManageBtn" class="btn btn-outline-secondary btn-sm" title="管理隐藏">隐藏管理</button>
                    </div>

                    <!-- 小屏：收纳为“更多”菜单 -->
                    <div class="dropdown d-flex d-sm-none">
                        <button class="btn btn-light-subtle border-0 btn-sm dropdown-toggle" type="button" id="moreMenuBtn" data-bs-toggle="dropdown" aria-expanded="false">更多</button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="moreMenuBtn">
                            <li><button class="dropdown-item" type="button" id="themeToggleMobile">切换主题</button></li>
                            <li class="dropend">
                                <a class="dropdown-item dropdown-toggle" href="#" id="densitySub" data-bs-toggle="dropdown" aria-expanded="false">密度</a>
                                <ul class="dropdown-menu" aria-labelledby="densitySub">
                                    <li><button class="dropdown-item density-item" data-density="auto" type="button">自动</button></li>
                                    <li><button class="dropdown-item density-item" data-density="comfortable" type="button">舒适</button></li>
                                    <li><button class="dropdown-item density-item" data-density="compact" type="button">紧凑</button></li>
                                </ul>
                            </li>
                            <li><hr class="dropdown-divider"/></li>
                            @if (Model.Languages != null)
                            {
                                foreach (var language in Model.Languages)
                                {
                                    var languageUrl = Url.Content($"~/Abp/Languages/Switch?culture={language.CultureName}&uiCulture={language.UiCultureName}&returnUrl={System.Net.WebUtility.UrlEncode(Request.GetEncodedPathAndQuery())}");
                                    <li><a class="dropdown-item" href="@languageUrl">@language.DisplayName</a></li>
                                }
                            }
                            <li><hr class="dropdown-divider"/></li>
                            @if (CurrentUser.IsAuthenticated)
                            {
                                <li><a class="dropdown-item" asp-controller="Manage" asp-action="Index" asp-area="Account">@AccountLocalizer["MyAccount"]</a></li>
                                <li><a class="dropdown-item" asp-controller="Logout" asp-action="Index" asp-area="Account">@L["Logout"]</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" asp-controller="Login" asp-action="Index" asp-area="Account">@L["Login"]</a></li>
                            }
                            <li><hr class="dropdown-divider"/></li>
                            <li><button class="dropdown-item" type="button" id="editToggleMobile">编辑首页</button></li>
                            <li><button class="dropdown-item" type="button" id="hiddenManageBtnMobile">管理隐藏</button></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 应用卡片 -->
    <section class="flex-grow-1 py-4 py-lg-5">
        <div class="container">
            <!-- 最近访问（若有） -->
            <div id="recentRow" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 mb-2 d-none"></div>
            <div id="appsGrid" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @if (Model.Applications != null)
                {
                    @foreach (var application in Model.Applications)
                    {
                        var target = application.ClientUri?.TrimEnd('/');
                        var clientId = application.ClientId ?? string.Empty;
                        if (!string.IsNullOrEmpty(target))
                        {
                            if (clientId == "Radish_Swagger" && !target.EndsWith("/swagger", StringComparison.OrdinalIgnoreCase))
                            {
                                target += "/swagger";
                            }
                            else if (clientId == "Radish_Scalar" && !target.EndsWith("/scalar", StringComparison.OrdinalIgnoreCase))
                            {
                                target += "/scalar";
                            }
                        }

                        if (CurrentUser.IsAuthenticated && !string.IsNullOrEmpty(target))
                        {
                            target += (target!.Contains("?") ? "&" : "?") + "sso=1";
                        }
                        <div class="col" data-client-id="@clientId">
                            <a href="@(target ?? "#")" target="_blank" rel="noopener" class="radish-app-card d-block h-100 text-reset" data-href="@(target ?? "#")" data-title="@application.DisplayName">
                                <div class="card h-100 border-0 shadow-sm radish-card">
                                    <div class="card-body d-flex align-items-start gap-3 position-relative">
                                        @if (!application.LogoUri.IsNullOrEmpty())
                                        {
                                            var logoUri = application.LogoUri;
                                            if (application.LogoUri.StartsWith('/'))
                                            {
                                                logoUri = @Url.Content(application.LogoUri.EnsureStartsWith('~'));
                                            }
                                            <img src="@logoUri" class="flex-shrink-0 radish-app-logo" alt="logo" />
                                        }
                                        <div class="flex-grow-1">
                                            <div class="h5 mb-1 fw-semibold">@application.DisplayName</div>
                                            <div class="text-muted small text-truncate">@application.ClientUri</div>
                                        </div>
                                        <div class="radish-card-tools position-absolute top-0 end-0 p-2 d-flex gap-2">
                                            <button type="button" class="btn btn-sm btn-light-subtle border-0 fav-toggle" title="收藏" data-client-id="@clientId">☆</button>
                                            <button type="button" class="btn btn-sm btn-light-subtle border-0 copy-link" title="复制链接" data-href="@(target ?? "#")">⧉</button>
                                            <button type="button" class="btn btn-sm btn-light-subtle border-0 health-check" title="健康检查" data-health-origin="@((!string.IsNullOrEmpty(application.ClientUri) ? new Uri(application.ClientUri).GetLeftPart(UriPartial.Authority) : string.Empty))">❤</button>
                                            <button type="button" class="btn btn-sm btn-light-subtle border-0 hide-toggle" title="隐藏" data-client-id="@clientId">🙈</button>
                                            <span class="radish-drag-handle d-none" title="拖拽排序">⋮⋮</span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
</div>

<!-- 隐藏管理 Modal -->
<div class="modal fade" id="hiddenManageModal" tabindex="-1" aria-labelledby="hiddenManageLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="hiddenManageLabel">已隐藏的应用</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="hiddenList" class="list-group small"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">关闭</button>
      </div>
    </div>
  </div>
</div>
