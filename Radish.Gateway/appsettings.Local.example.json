{
  "//说明": "这是本地开发配置模板，复制为 appsettings.Local.json 后修改敏感信息",
  "//注意": "appsettings.Local.json 已被 Git 忽略，不会被提交到仓库",

  "//CORS配置": "前端开发服务器地址，根据实际情况调整",
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "http://localhost:3000"
    ]
  },

  "//下游服务配置": "本地开发环境的 API 服务地址",
  "DownstreamServices": {
    "ApiService": {
      "BaseUrl": "https://localhost:5101",
      "HealthCheckPath": "/health"
    }
  },

  "//前端服务配置": "前端服务地址，用于门户页面展示",
  "FrontendService": {
    "BaseUrl": "https://localhost:3000"
  },

  "//在线文档配置（用于门户展示）": "启用后 Gateway 将在 /docs 路径上转发到 radish.docs 服务",
  "Docs": {
    "Enabled": true,
    "RequestPath": "/docs"
  },

  "//YARP 反向代理本地示例": "按需调整 radish.docs / 前端 / API 的地址",
  "ReverseProxy": {
    "Routes": {
      "docs-route": {
        "ClusterId": "docs-cluster",
        "Match": {
          "Path": "/docs/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "docs-cluster": {
        "Destinations": {
          "docs": {
            "Address": "http://localhost:3001" // 本地 radish.docs dev 服务地址
          }
        }
      }
    }
  }
}
