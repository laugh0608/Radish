{
  // 日志配置
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // 允许的主机
  "AllowedHosts": "*",
  // CORS 配置
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "http://localhost:3000"
    ]
  },
  // Gateway 自身的公开访问地址（用于门户页面展示）
  "GatewayService": {
    "PublicUrl": "https://localhost:5001"
  },
  // 下游 API 服务配置
  "DownstreamServices": {
    "ApiService": {
      "BaseUrl": "https://localhost:5101",
      "HealthCheckPath": "/health"
    }
  },
  // 前端服务配置（用于门户页面展示）
  "FrontendService": {
    "BaseUrl": "https://localhost:3000"
  },
  // YARP 反向代理配置（基础路由和集群，可在 Local 配置中覆盖）
  "ReverseProxy": {
    "Routes": {
      "docs-route": {
        "ClusterId": "docs-cluster",
        "Match": {
          "Path": "/docs/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "docs-cluster": {
        "Destinations": {
          "docs": {
            "Address": "http://localhost:3001" // 本地 radish.docs 服务地址，生产环境建议在 Local/环境变量中覆盖
          }
        }
      }
    }
  },
  // 在线文档配置（用于门户展示和开关）
  "Docs": {
    // 是否显示文档入口
    "Enabled": true,
    // 网关内部文档访问路径（与 ReverseProxy 路由保持一致）
    "RequestPath": "/docs"
  }
}
