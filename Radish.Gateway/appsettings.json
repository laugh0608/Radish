{
  // ============================================================
  // Radish.Gateway - 服务网关配置
  // ============================================================
  // 说明：本配置包含开发环境的默认值，可以直接运行
  //       生产环境请创建 appsettings.Local.json 覆盖相关配置
  // ============================================================

  // 日志配置
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // 允许的主机
  "AllowedHosts": "*",

  // CORS 配置（允许的前端地址）
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },

  // Gateway 自身的公开访问地址（用于门户页面展示）
  "GatewayService": {
    "PublicUrl": "https://localhost:5000"
  },

  // 下游服务配置
  "DownstreamServices": {
    "ApiService": {
      "BaseUrl": "http://localhost:5100",
      "HealthCheckPath": "/health"
    }
  },

  // 前端服务配置（用于门户页面展示）
  "FrontendService": {
    "BaseUrl": "http://localhost:3000"
  },

  // YARP 反向代理配置
  // 本地开发环境仅配置文档服务路由，其他路由可在 Local.json 中添加
  "ReverseProxy": {
    "Routes": {
      "docs-route": {
        "ClusterId": "docs-cluster",
        "Match": {
          "Path": "/docs/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "docs-cluster": {
        "Destinations": {
          "docs": {
            "Address": "http://localhost:3001"
          }
        }
      }
    }
  },

  // 在线文档配置
  "Docs": {
    "Enabled": true,
    "RequestPath": "/docs/"
  }
}

