{
  // ============================================================
  // Radish.Gateway - 服务网关配置模板
  // ============================================================
  // 说明：本配置文件包含所有可用配置项及其默认值
  //       开发/部署时，请复制本文件为 appsettings.Local.json
  //       然后修改其中的服务地址、域名等信息
  // 注意：appsettings.Local.json 已在 .gitignore 中排除，不会提交到仓库
  // ============================================================

  // 日志配置
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // 允许的主机
  "AllowedHosts": "*",

  // CORS 配置（跨域资源共享）
  // 开发环境：添加前端开发服务器地址
  // 生产环境：配置实际的前端域名
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },

  // Gateway 自身的公开访问地址
  // 用于门户页面展示和服务发现
  // 本地开发：https://localhost:5000
  // 生产环境：https://your-domain.com
  "GatewayService": {
    "PublicUrl": "https://localhost:5000"
  },

  // 下游 API 服务配置
  // 配置需要代理的后端服务地址
  "DownstreamServices": {
    "ApiService": {
      "BaseUrl": "http://localhost:5100",
      "HealthCheckPath": "/health"
    }
    // 生产环境示例：
    // "ApiService": {
    //   "BaseUrl": "http://your-api-server:5100",
    //   "HealthCheckPath": "/health"
    // },
    // "AuthService": {
    //   "BaseUrl": "http://your-auth-server:5200",
    //   "HealthCheckPath": "/health"
    // }
  },

  // 前端服务配置
  // 用于门户页面展示前端服务入口
  "FrontendService": {
    "BaseUrl": "http://localhost:3000"
  },
  // 生产环境示例：
  // "FrontendService": {
  //   "BaseUrl": "https://your-frontend-domain.com"
  // },

  // YARP 反向代理配置
  // 配置路由规则和目标集群
  // 详细文档：https://microsoft.github.io/reverse-proxy/
  "ReverseProxy": {
    "Routes": {
      // 文档服务路由
      "docs-route": {
        "ClusterId": "docs-cluster",
        "Match": {
          "Path": "/docs/{**catch-all}"
        }
      }
      // 生产环境可以添加更多路由：
      // "api-route": {
      //   "ClusterId": "api-cluster",
      //   "Match": {
      //     "Path": "/api/{**catch-all}"
      //   }
      // },
      // "auth-route": {
      //   "ClusterId": "auth-cluster",
      //   "Match": {
      //     "Path": "/auth/{**catch-all}"
      //   }
      // }
    },
    "Clusters": {
      // 文档服务集群
      "docs-cluster": {
        "Destinations": {
          "docs": {
            "Address": "http://localhost:3001" // 本地 radish.docs 服务地址
          }
        }
      }
      // 生产环境可以添加更多集群：
      // "api-cluster": {
      //   "Destinations": {
      //     "api": {
      //       "Address": "http://your-api-server:5100"
      //     }
      //   }
      // },
      // "auth-cluster": {
      //   "Destinations": {
      //     "auth": {
      //       "Address": "http://your-auth-server:5200"
      //     }
      //   }
      // }
    }
  },

  // 在线文档配置
  // 用于门户页面显示文档入口
  "Docs": {
    // 是否显示文档入口
    "Enabled": true,
    // 网关内部文档访问路径（与 ReverseProxy 路由保持一致）
    "RequestPath": "/docs/"
  }
}
