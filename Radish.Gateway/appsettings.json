{
  // ============================================================
  // Radish.Gateway - 服务网关配置
  // ============================================================
  // 说明：本配置适用于开发和生产环境
  //       生产环境部署时，建议通过环境变量覆盖以下配置：
  //       - GatewayService__PublicUrl (公开访问域名)
  //       - Cors__AllowedOrigins__0 (前端域名)
  // ============================================================

  // 日志配置
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  // CORS 配置
  // 开发环境：本地前端地址
  // 生产环境：通过环境变量添加实际域名
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },

  // Gateway 公开访问地址（用于门户页面展示）
  // 开发：https://localhost:5000
  // 生产：通过环境变量设置为 https://your-domain.com
  "GatewayService": {
    "PublicUrl": "https://localhost:5000"
  },

  // 下游服务配置（内部服务地址）
  // 开发环境：localhost + 端口
  // 生产环境（Docker/K8s）：容器名/服务名 + 端口
  "DownstreamServices": {
    "ApiService": {
      "BaseUrl": "http://localhost:5100",
      "HealthCheckPath": "/health"
    },
    "AuthService": {
      "BaseUrl": "http://localhost:5200",
      "HealthCheckPath": "/health"
    }
  },

  // 前端服务配置（用于门户页面展示）
  // 生产环境通过环境变量设置
  "FrontendService": {
    "BaseUrl": "http://localhost:3000"
  },

  // YARP 反向代理配置
  // 路由和集群配置适用于开发和生产环境
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        }
      },
      "docs-route": {
        "ClusterId": "docs-cluster",
        "Match": {
          "Path": "/docs/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "api": {
            "Address": "http://localhost:5100"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "auth": {
            "Address": "http://localhost:5200"
          }
        }
      },
      "docs-cluster": {
        "Destinations": {
          "docs": {
            "Address": "http://localhost:3001"
          }
        }
      }
    }
  },

  // 在线文档配置
  "Docs": {
    "Enabled": true,
    "RequestPath": "/docs/"
  }
}


