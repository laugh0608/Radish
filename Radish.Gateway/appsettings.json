{
  // 日志配置
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // 允许的主机
  "AllowedHosts": "*",
  // CORS 配置
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "http://localhost:3000"
    ]
  },
  // Gateway 自身的公开访问地址（用于门户页面展示）
  "GatewayService": {
    "PublicUrl": "https://localhost:5001"
  },
  // 下游 API 服务配置
  "DownstreamServices": {
    "ApiService": {
      "BaseUrl": "https://localhost:5101",
      "HealthCheckPath": "/health"
    }
  },
  // 前端服务配置（用于门户页面展示）
  "FrontendService": {
    "BaseUrl": "https://localhost:3000"
  }
}
