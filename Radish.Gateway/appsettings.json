{
  // 日志配置
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // 允许的主机
  "AllowedHosts": "*",
  // CORS 配置
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "http://localhost:3000"
    ]
  },
  // Gateway 自身的公开访问地址（用于门户页面展示）
  "GatewayService": {
    "PublicUrl": "https://localhost:5001"
  },
  // 下游 API 服务配置
  "DownstreamServices": {
    "ApiService": {
      "BaseUrl": "https://localhost:5101",
      "HealthCheckPath": "/health"
    }
  },
  // 前端服务配置（用于门户页面展示）
  "FrontendService": {
    "BaseUrl": "https://localhost:3000"
  },
  // 在线文档配置（可选）
  "Docs": {
    // 是否启用文档静态站点托管
    "Enabled": false,
    // 文档访问路径，例如 "/docs"
    "RequestPath": "/docs",
    // 文档静态文件所在的物理目录名（相对于 Gateway 根目录）
    "StaticFolder": "DocsSite"
  }
}
