{
  // 生产环境配置示例
  // 使用时请复制为 appsettings.Production.json 或通过环境变量配置
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // CORS 配置 - 替换为实际的前端域名
  "Cors": {
    "AllowedOrigins": [
      "https://app.radish.com",
      "https://www.radish.com"
    ]
  },
  // Gateway 自身的公开访问地址
  "GatewayService": {
    "PublicUrl": "https://radish.com"
  },
  // 下游 API 服务配置
  // 注意：这里配置内网地址（容器名或内网 IP）
  // Nginx 会反向代理公网 HTTPS 请求到这个 HTTP 端口
  "DownstreamServices": {
    "ApiService": {
      "BaseUrl": "http://api:5100",
      "HealthCheckPath": "/health"
    }
  },
  // 前端服务配置（用于门户页面展示）
  "FrontendService": {
    "BaseUrl": "https://app.radish.com"
  }
}
