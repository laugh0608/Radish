@page "/server"
@{
    Layout = null;
    ViewData["Title"] = "Radish Gateway";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true">
</head>
<body>
<main class="simple-server-page">
    <span class="badge">Radish Gateway</span>
    <h1>Welcome to Radish</h1>
    <p class="lead">
        这是 Gateway 服务入口，统一的服务概览和健康状态已迁移到 Console 控制台。
    </p>

    <div class="actions" style="margin-top: 1.5rem;">
        <a class="button primary" href="/console">进入 Console 控制台</a>
    </div>
</main>
</body>
</html>
