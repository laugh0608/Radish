{
  "//说明": "这是本地开发配置模板，复制为 appsettings.Local.json 后修改敏感信息",
  "//注意": "appsettings.Local.json 已被 Git 忽略，不会被提交到仓库",

  "//Snowflake配置": "建议本地开发使用 WorkId=0，避免与生产环境冲突",
  "Snowflake": {
    "WorkId": 0,
    "DataCenterId": 0
  },

  "//数据库配置-SQLite": "默认使用 SQLite，适合本地开发",
  "Databases": [
    {
      "ConnId": "Main",
      "DbType": 2,
      "Enabled": true,
      "ConnectionString": "Radish.db"
    },
    {
      "ConnId": "Log",
      "DbType": 2,
      "Enabled": true,
      "HitRate": 50,
      "ConnectionString": "RadishLog.db"
    }
  ],

  "//数据库配置-PostgreSQL示例": "生产环境或需要 PostgreSQL 时使用",
  "//Databases-PostgreSQL": [
    {
      "ConnId": "Main",
      "DbType": 4,
      "Enabled": true,
      "ConnectionString": "Host=localhost;Port=5432;Database=radish;Username=postgres;Password=your_password_here"
    },
    {
      "ConnId": "Log",
      "DbType": 4,
      "Enabled": true,
      "HitRate": 50,
      "ConnectionString": "Host=localhost;Port=5432;Database=radish_log;Username=postgres;Password=your_password_here"
    }
  ],

  "//Redis配置": "Enable=true 启用 Redis，false 使用内存缓存",
  "Redis": {
    "Enable": false,
    "ConnectionString": "localhost:6379,password=your_redis_password,allowAdmin=true",
    "InstanceName": "Radish"
  },

  "//Redis配置-远程服务器示例": "",
  "//Redis-Remote": {
    "Enable": true,
    "ConnectionString": "your-redis-server.com:6379,password=your_redis_password,allowAdmin=true,ssl=true",
    "InstanceName": "Radish"
  },

  "//AutoMapper许可证": "如果有商业许可证，在此配置",
  "AutoMapper": {
    "LicenseKey": "your-automapper-license-key-here"
  },

  "//CORS配置": "前端开发服务器地址，根据实际情况调整",
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "http://localhost:3000"
    ]
  },

  "//其他可选配置": "",
  "AppSettings": {
    "UseLoadTest": false
  }
}
